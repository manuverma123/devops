pipeline {
    agent any


 tools {
        // Configure SonarScanner as a tool with the installation name "sonarscanner"
        sonarScanner 'sonarscanner'
    }
 
    stages {
        stage('checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/manuverma123/devops.git']])
            }
        }
        
         stage('build') {
            steps {
 dir('devops-automation-main') {
            sh 'mvn clean install'
           }
        }
}

 stage('SonarQube Analysis') {
            steps {
 script {
                sh 'sonar-scanner -Dsonar.login=myprojecttoken'
                    }
                }
            }
        


stage('build docker image') {
            steps {
                 script {
             
          sh 'docker build -t javatechie/devops-integration devops-automation-main/'
    } 
    }
}

 stage('deploy') {
                steps {
                     script {
                        sh 'docker run -d --name javaproject -p 8081:8081 javatechie/devops-integration'
                    } 
                }
        }
}
}

