pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/manuverma123/devops.git']])
            }
        }
        
         stage('build') {
            steps {
               bat '"C:\\Program Files\\apache-maven-3.9.1\\bin\\mvn.cmd" -f "devops-automation-main\\pom.xml" clean install'
            }
         }

stage('build docker image') {
            steps {
                 script {
              //  docker.build('javatechie/devops-integration')
               // bat wsl usr/bin/docker build -t "javatechie/devops-integration" .
         // bat 'wsl usr/bin/docker build -t devops-automation-main'
  //bat 'wsl /bin/docker build -t devops-automation-main'
// Convert Windows path to WSL-compatible path
            def wslPath = bat(script: 'wsl wslpath -u "C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\Docpipe\\devops-automation-main"', returnStdout: true).trim()
            
            // Change directory permissions within WSL
            bat "wsl chmod -R 777 ${wslPath}"
            
            // Build Docker image using the WSL-compatible path
            bat "wsl docker build -t devops-automation-main ${wslPath}"
       
            
            } 
    }
}
}
}

